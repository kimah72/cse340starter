<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
<p class="confirm">Confirm Deletion - The delete is permanent</p>
<br>
<form action="/inv/delete" method="post">
  <label for="inv_make">Make:</label>
  <input type="text" name="inv_make" id="inv_make" readonly value="<%= locals.inv_make %>">
  <label for="inv_model">Model:</label>
  <input type="text" name="inv_model" id="inv_model" readonly value="<%= locals.inv_model %>">
  <label for="inv_year">Year:</label>
  <input type="number" name="inv_year" id="inv_year" readonly value="<%= locals.inv_year %>">
  <label for="inv_price">Price:</label>
  <input type="number" name="inv_price" id="inv_price" readonly value="<%= locals.inv_price %>">
  <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
  <button type="submit">Delete Vehicle</button>
</form>