<h1><%= title %></h1>
<%- messages() %>
<% if (locals.errors && locals.errors.length > 0) { %>
  <ul class="notice">
    <% locals.errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
<form action="/inv/add-classification" method="POST">
  <label for="classification_name">Classification Name:</label>
  <input type="text" id="classification_name" name="classification_name" required 
         pattern="^[A-Z][a-zA-Z0-9]*$" 
         title="Classification must start with a capital letter and contain only alphanumeric characters (no spaces or special characters).">
  <button type="submit">Add Classification</button>
</form>