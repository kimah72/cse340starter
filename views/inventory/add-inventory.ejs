<h1><%= title %></h1>
<% if (locals.message) { %>
  <p><%- messages() %></p>
<% } %>

<%- messages() %>
<form action="/inv/add-inventory" method="POST">
  <p><em>Note: All fields are required.</em></p>
  <br>
  <label for="inv_make">Make:</label>
  <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>" title="Please provide the make of the vehicle.">
  
  <label for="inv_model">Model:</label>
  <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>" title="Please provide the model of the vehicle.">
  
  <label for="inv_year">Year:</label>
  <input type="number" id="inv_year" name="inv_year" required min="1900" max="<%= new Date().getFullYear() + 1 %>" value="<%= locals.inv_year %>" title="Year must be between 1900 and next year.">
  
  <label for="inv_color">Color:</label>
  <input type="text" id="inv_color" name="inv_color" required value="<%= locals.inv_color %>" title="Please provide the color of the vehicle.">
  
  <label for="inv_description">Description:</label>
  <textarea id="inv_description" name="inv_description" required><%= locals.inv_description %></textarea>
  
  <label for="inv_image">Image Path:</label>
  <input type="text" id="inv_image" name="inv_image" required value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>" title="Provide the path to the vehicle's image.">
  
  <label for="inv_thumbnail">Thumbnail Path:</label>
  <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>" title="Provide the path to the vehicle's thumbnail image.">
  
  <label for="inv_price">Price:</label>
  <input type="number" id="inv_price" name="inv_price" required step="0.01" value="<%= locals.inv_price %>" title="Price must be a positive number.">
  
  <label for="inv_miles">Miles:</label>
  <input type="number" id="inv_miles" name="inv_miles" required value="<%= locals.inv_miles %>" title="Mileage must be a non-negative integer.">
  
  <label for="classificationList">Classification:</label>
  <%- locals.classificationList %>
  
  <button type="submit">Add Inventory Item</button>
</form>